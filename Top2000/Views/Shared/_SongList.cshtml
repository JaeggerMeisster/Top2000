@using Top2000.ViewModels
@model IEnumerable<SongViewModel>
@{
    var List = Model.ToList();
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Rank</th>
            <th scope="col">Title</th>
            <th scope="col">Artist</th>
            <th scope="col">ReleaseDate</th>
        </tr>
    </thead>
    <tbody>
       @for (int i = 0; i < List.Count(); i++)
        {
            var song = List[i];
            var artistString = song.Artists == null ? "" : string.Join(", ", song.Artists);
            var rankNumber = ViewBag.UseIndex ? i + 1 : song.Rank;
            <tr>
                <th scope="row">@rankNumber</th>
                <td>@song.Title</td>
                <td>@artistString</td>
                <td>@song.Year</td>
            </tr>
        }
    </tbody>
</table>
